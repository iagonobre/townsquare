@model Townsquare.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<h2>Create Event</h2>

<form asp-action="Create" method="post">

    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label>Description</label>
        <textarea asp-for="Description"></textarea>
    </div>

    <div>
        <label>Category</label>
        <input asp-for="Category" />
    </div>

    <div>
        <label>Image URL</label>
        <input asp-for="ImageUrl" />
    </div>

    <div>
        <label>Date</label>
        <input asp-for="Date" type="datetime-local" />
    </div>

    <div>
        <label>Country</label>
        <input asp-for="Country" />
    </div>

    <div>
        <label>Region</label>
        <input asp-for="Region" />
    </div>

    <div>
        <label>Address</label>
        <input asp-for="Address" />
    </div>

    <button type="submit">Create</button>

</form>