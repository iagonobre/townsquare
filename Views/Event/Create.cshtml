@model Townsquare.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<div class="create-container">

    <h2 class="create-title">Create Event</h2>
    
    <form asp-action="Create"
          method="post"
          enctype="multipart/form-data"
          class="create-form">

        <div asp-validation-summary="All" class="validation-summary"></div>

        <div class="create-field">
            <label class="create-label">Event Name</label>
            <input asp-for="Title" class="create-input" placeholder="Enter the event name" />
            <span asp-validation-for="Title" class="validation-error"></span>
        </div>

        <div class="create-field">
            <label class="create-label">Description</label>
            <textarea asp-for="Description"
                      class="create-textarea"
                      placeholder="Describe your event"></textarea>
            <span asp-validation-for="Description" class="validation-error"></span>
        </div>

        <div class="create-field">
            <label class="create-label">Category</label>
            <select asp-for="Category" class="create-input">
                <option value="">Select a category</option>
                <option>Music</option>
                <option>Food & Drinks</option>
                <option>Sports</option>
                <option>Arts & Culture</option>
                <option>Workshops</option>
                <option>Charity</option>
                <option>Technology</option>
                <option>Networking</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Category" class="validation-error"></span>
        </div>

        <div class="create-field">
            <label class="create-label">Banner Image</label>

            <input type="file"
                   name="imageFile"
                   accept="image/*"
                   class="create-input" />
            <span asp-validation-for="ImageUrl" class="validation-error"></span>

            <div class="create-banner">
                <img src="~/icons/image.svg" class="banner-icon" />
                <span>Upload a banner 16:9 (1600Ã—900 px recommended)</span>
            </div>
        </div>

        <div class="create-field">
            <label class="create-label">Date & Time</label>
            <input asp-for="Date" type="datetime-local" class="create-input" />
            <span asp-validation-for="Date" class="validation-error"></span>
        </div>

        <div class="create-row">
            <div class="create-field">
                <label class="create-label">Country</label>
                <select asp-for="Country" class="create-input">
                    <option value="">Select a country</option>
                    @foreach (var c in (List<string>)ViewBag.Countries)
                    {
                        <option value="@c">@c</option>
                    }
                </select>
                <span asp-validation-for="Country" class="validation-error"></span>
            </div>

            <div class="create-field">
                <label class="create-label">Region</label>
                <input asp-for="Region" class="create-input" placeholder="Region / State" />
                <span asp-validation-for="Region" class="validation-error"></span>
            </div>
        </div>

        <div class="create-field">
            <label class="create-label">Street Address</label>
            <input asp-for="Address" class="create-input" placeholder="Street address" />
            <span asp-validation-for="Address" class="validation-error"></span>
        </div>

        <button type="submit" class="ts-btn create-submit">Create Event</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
