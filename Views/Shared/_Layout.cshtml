<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Townsquare</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Outfit:wght@100..900&family=Syne:wght@400..800&display=swap" rel="stylesheet">
</head>
<body>
<header class="ts-header">
    <div class="ts-header-inner">
        <a asp-controller="Home" asp-action="Index" class="ts-logo">Townsquare</a>

        <div class="ts-nav-right">
            <partial name="_LoginPartial"/>
        </div>
    </div>
</header>

<div class="page-wrapper">
    <div class="page-container-inner">
        @RenderBody()
    </div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>